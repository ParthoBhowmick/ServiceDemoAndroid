<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="4"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <EditText
        android:inputType="numberDecimal"
        android:id="@+id/limit"
        android:gravity="center_horizontal"
        android:hint="limit"
        android:layout_marginBottom="20dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/start_sticky"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Sticky Service"
        />

    <Button
        android:id="@+id/start_not_sticky"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Not Sticky Service" />

    <Button
        android:id="@+id/start_redeliver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Redirect Service" />

    <Button
        android:id="@+id/bind_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bind Service" />

    <Button
        android:id="@+id/message_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Messaging Service" />

    <TextView
        android:id="@+id/counter"
        android:inputType="numberDecimal"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:layout_width="200dp"
        android:textSize="18sp"
        android:layout_height="wrap_content"/>

</LinearLayout>